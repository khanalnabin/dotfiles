# don't steal focus
focus_on_window_activation smart

# disable focus follows mouse
focus_follows_mouse no

# for media consumption
bindsym $mod+m fullscreen disable; floating enable; resize set 400 300; sticky enable; move window to position 1400 780

# return back from media mode
bindsym $mod+Shift+m  floating disable;sticky disable;

bindsym $mod+n exec notify-send "$(playerctl metadata title && playerctl metadata album && playerctl metadata artist)"
# new mode to open applications
bindsym $mod+Shift+o mode "$mode_launcher"

#bindsym $mod+n exec --no-startup-id notify-send "`playerctl metadata title ; playerctl metadata album ; playerctl metadata artist;`" 

set $mode_launcher Launch: [b]rave [n]autilus vs[c]ode [s]potify [a]udacious [e]vince [m]ailspring
mode "$mode_launcher" {
        bindsym b exec --no-startup-id brave; mode "default"
        bindsym n exec --no-startup-id nautilus; mode "default"
        bindsym c exec --no-startup-id vscode; mode "default"
        bindsym s exec --no-startup-id spotify; mode "default"
        bindsym a exec --no-startup-id audacious; mode "default"
        bindsym e exec --no-startup-id evince; mode "default"
        bindsym m exec --no-startup-id mailspring; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
#
#i3 gaps for transparent borders
gaps inner 8

# set $color #81a1c1
set $color #00ffff

# colour of border, background, text, indicator, and child_border
client.focused              $color  #2f343f #d8dee8 $color  $color
client.focused_inactive     #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.unfocused            #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.urgent               #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.placeholder          #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.background           #2f343f
